<Window x:Class="EasyMusic.Windows.WinAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyMusic.Windows"
        mc:Ignorable="d"
    WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="关于" SizeToContent="WidthAndHeight">
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image Source="/EasyMusic;component/Properties/Images/icon.ico" Width="128" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel Grid.Column="2" >
            <TextBlock FontSize="20">EasyMusic</TextBlock>
            <TextBox x:Name="txt1" IsReadOnly="True"   BorderThickness="0"/>
            <TextBox x:Name="txt2" IsReadOnly="True"  TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" BorderThickness="0" MaxHeight="300"/>

        </StackPanel>
    </Grid>
</Window>
