<Window x:Class="EasyMuisc.WinMusicInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyMuisc"
        mc:Ignorable="d"
        Title="音乐信息"  SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>
        <TextBlock>
            文件名
            <LineBreak/>
            地址
                        <LineBreak/>

            大小
            <LineBreak/>

            标题
            <LineBreak/>

            时长
            <LineBreak/>

            艺术家
            <LineBreak/>

            专辑
        </TextBlock>
        <TextBox x:Name="txt" IsReadOnly="True" Grid.Column="2" BorderThickness="0"/>
    </Grid>
</Window>
